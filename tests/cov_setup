
export TESTS_WDIR="$PWD"

cd ..
export ARMA_INCLUDE_PATH="$PWD/include"
export CXXCOV=gcov
export LD_LIBRARY_PATH="$PWD":$LD_LIBRARY_PATH
cd tests

cd dsge
./configure -b dev -c
make
./cov_check

cd ../var
./configure -b dev -c
make
./cov_check

cd $TESTS_WDIR/..
rm -rf ./include/armadillo*
rm -rf ./include/stats
rm -rf ./src/mcmc
rm -rf ./src/optim
cd $TESTS_WDIR
